<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<p> Pokemons: </p>
<table>
    <tr>
      <th> Pokemon Name </th>
      <th> Level </th>
      <th> HP </th>
      <th> Attack </th>
      </tr>
    <% @trainer.pokemons.each do |p| %>
      <tr>
        <td>
          <%= p.name %>
        </td>

        <td>
          <%= p.level %>
        </td>

        <td>
          <%= p.hp %>
        </td>

        <td>
          <%= button_to "Damage!", damage_path(id: p.id), :class => "button medium", :method => :patch %>
        </td>
      </tr>
    <% end %>
</table>

<%= button_to "Create New Pokemon", "/pokemons/new", :method => :get %>

